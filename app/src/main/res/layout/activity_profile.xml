<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".ProfileActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayoutProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarProfile"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">

            <ImageButton
                android:id="@+id/backButtonProfile"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="start|center_vertical"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Kembali"
                android:src="@drawable/ic_arrow_back"
                app:tint="@color/black" />

            <TextView
                android:id="@+id/toolbarTitleProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/baloo"
                android:text="Profil"
                android:textColor="#F57C00"
                android:textSize="24sp"
                android:textStyle="bold" />

        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@appBarLayoutProfile"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profileImageView"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/ic_launcher_round"
                app:civ_border_color="#F57C00"
                app:civ_border_width="2dp"/>

            <TextView
                android:id="@+id/profileNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/montserrat_bold"
                android:textColor="#F57C00"
                android:textSize="22sp"
                android:textStyle="bold"
                tools:text="Nama Pengguna" />

            <TextView
                android:id="@+id/profileEmailTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="4dp"
                android:textSize="14sp"
                tools:text="email@pengguna.com" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/editProfileButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp"
                android:background="@drawable/buttonshape_light_orange"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:text="Edit Profil"
                android:textColor="#F57C00" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:fontFamily="@font/baloo"
                android:text="Akun Saya"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:id="@+id/riwayatPesananLayout"
                style="@style/ProfileOptionLayout">
                <ImageView style="@style/ProfileOptionIcon" android:src="@drawable/ic_history"/>
                <TextView style="@style/ProfileOptionText" android:text="Riwayat Pesanan"/>
                <ImageView style="@style/ProfileOptionArrow"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/alamatLayout"
                style="@style/ProfileOptionLayout">
                <ImageView style="@style/ProfileOptionIcon" android:src="@drawable/ic_location"/>
                <TextView style="@style/ProfileOptionText" android:text="Alamat Tersimpan"/>
                <ImageView style="@style/ProfileOptionArrow"/>
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/baloo"
                android:text="Aplikasi"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:id="@+id/pusatBantuanLayout"
                style="@style/ProfileOptionLayout">
                <ImageView style="@style/ProfileOptionIcon" android:src="@drawable/ic_help"/>
                <TextView style="@style/ProfileOptionText" android:text="Pusat Bantuan"/>
                <ImageView style="@style/ProfileOptionArrow"/>
            </RelativeLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/logoutButton"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="32dp"
                android:background="@drawable/buttonshape_logout"
                android:drawableStart="@drawable/ic_logout"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:text="Keluar"
                android:gravity="center_vertical|start"
                android:textAllCaps="false"
                android:textColor="#D32F2F"
                android:textSize="16sp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>