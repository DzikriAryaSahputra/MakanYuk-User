<resources xmlns:tools="http://schemas.android.com/tools">
        <style name="Base.Theme.DeliveryFood" parent="Theme.Material3.DayNight.NoActionBar">
        </style>

        <style name="Theme.DeliveryFood" parent="Base.Theme.DeliveryFood" />

        <style name="RoundedImageView" parent="">
            <item name="cornerFamily">rounded</item>
            <item name="cornerSize">12dp</item>
        </style>
    <style name="ShapeAppearanceOverlay.App.CornerSize8dp" parent="">
        <item name="cornerSize">8dp</item>
    </style>
    <style name="ProfileOptionLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:background">@drawable/profile_option_background</item>
        <item name="android:padding">16dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="ProfileOptionIcon">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:tint">#F57C00</item>
    </style>

    <style name="ProfileOptionText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginStart">48dp</item> <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ProfileOptionArrow">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:tint">#BDBDBD</item> </style>

    <style name="EditProfileLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">#F57C00</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="EditProfileLabelTint">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textColor">#767676</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="EditProfileEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:background">@drawable/edittextshape_profile</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>